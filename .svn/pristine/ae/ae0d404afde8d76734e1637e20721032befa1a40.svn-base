    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/itemTitlecolor"
            android:gravity="center_vertical"
            android:weightSum="2">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|top"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/userName"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                tools:ignore="HardcodedText" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/userNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"

                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="2">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|top"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/loyalty_status"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                tools:ignore="HardcodedText" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/LoyaltyStatusView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

        <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
            android:id="@+id/mangerRemarksText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="@string/reward_points"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
            android:id="@+id/rewardsPointsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>