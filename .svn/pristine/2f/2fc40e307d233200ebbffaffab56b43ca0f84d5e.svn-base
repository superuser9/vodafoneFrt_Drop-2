<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/enablededittext"
            android:orientation="vertical">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/sos_desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/please_enter_reason"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="#0f0f0f" />

            <com.vodafone.frt.fonts.FRTEditTextTrebuchetMS
                android:id="@+id/othereditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sos_desc"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/enablededittext"
                android:hint="@string/reason"
                android:imeOptions="flagNoExtractUi"
                android:minHeight="200dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                tools:ignore="ObsoleteLayoutParam" />

            <View
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="#0f0f0f" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>