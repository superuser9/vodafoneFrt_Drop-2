<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vodafone.frt.activities.OthersActivity">

    <RelativeLayout

        android:background="@color/colorPrimary"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ivbackCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:src="@mipmap/ic_back"
                tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="@string/back"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />
        </LinearLayout>

        <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/others"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!--  <ImageView
              android:id="@+id/addCheckInImg"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:layout_marginRight="10dp"
              android:layout_alignParentRight="true"
              android:src="@android:drawable/ic_input_add"
              android:tint="@android:color/white"
              android:layout_gravity="right"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />-->

    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:fillViewport="true"
        android:gravity="center">



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="15dp"
            tools:ignore="ScrollViewSize">

        <LinearLayout
            android:id="@+id/ll_task"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <RelativeLayout
                android:id="@+id/helpDeskRelativeLayout"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/help_desk"
                android:paddingBottom="18dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"

                tools:ignore="RtlHardcoded,RtlSymmetry">

                <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                    android:id="@+id/helpDeskTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/helpDesk"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loyalityPointsRelativeLayout"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_loyality_points"
                android:paddingBottom="18dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"

                tools:ignore="RtlHardcoded,RtlSymmetry">

                <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                    android:id="@+id/loyalityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/loyalityPoints"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

            </RelativeLayout>
        </LinearLayout>




            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                tools:ignore="DisableBaselineAlignment">

                <RelativeLayout
                    android:id="@+id/supportRelativeLayout"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_support"
                    android:paddingBottom="18dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"

                    tools:ignore="RtlHardcoded,RtlSymmetry">

                    <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                        android:id="@+id/supportTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/support"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bulletinRelativeLayout"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_bulletin_board"
                    android:paddingBottom="18dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"

                    tools:ignore="RtlHardcoded,RtlSymmetry">

                    <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                        android:id="@+id/bulletinTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/bulletinBoard"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                tools:ignore="DisableBaselineAlignment">

                <RelativeLayout
                    android:id="@+id/feedbackRelativeLayout"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_feedback"
                    android:paddingBottom="18dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"

                    tools:ignore="RtlHardcoded,RtlSymmetry">

                    <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                        android:id="@+id/feedbackTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/feedback"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="invisible"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/help_desk"
                    android:paddingBottom="18dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"

                    tools:ignore="RtlHardcoded,RtlSymmetry">

                    <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/support"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
