<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="4.6"
    tools:ignore="DisableBaselineAlignment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1.8"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
            android:id="@+id/assignment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/itemTitlecolor"
            android:gravity="center_vertical"
            android:weightSum="2">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|top"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/issueType"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                tools:ignore="HardcodedText" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/issue_type_name"
                android:layout_width="0dp"
                android:gravity="right|center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/patrollerRemarksLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|top"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/patrollerRemarks"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                tools:ignore="HardcodedText" />

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/patrolleRemarksTv"
                android:layout_width="match_parent"
                android:gravity="right|center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/managerRemarksLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:visibility="visible"
            android:weightSum="2">

            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|top"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:text="@string/managerremarks"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                tools:ignore="HardcodedText" />
            <com.vodafone.frt.fonts.FRTTextviewTrebuchetMS
                android:id="@+id/managerRemarksTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="2dp"
                android:gravity="right|center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/route"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>